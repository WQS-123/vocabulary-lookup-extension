{
  "manifest_version": 3,
  "name": "Vocabulary Lookup",
  "version": "1.0.0",
  "description": "Select any word on a webpage to see its definition in a tooltip from Vocabulary.com",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://www.vocabulary.com/*",
    "https://api.dictionaryapi.dev/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/vocabulary-api.js", "content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vocabulary Lookup Settings"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles/content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}